{
  "name": "pastebin-telegram-bot",
  "description": "Telegram bot for pasting code to Pastebin",
  "repository": "https://github.com/nobodydi/TESTBOT",
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "PASTEBIN_API_KEY": {
      "description": "Pastebin API Key",
      "required": true
    }
  },
  "scripts": {
    "postdeploy": "python past_bot.py"
  },
  "formation": {
    "web": {
      "quantity": 0
    },
    "worker": {
      "quantity": 1
    }
  },
  "environments": {
    "production": {
      "TELEGRAM_BOT_TOKEN": "your-telegram-bot-token",
      "PASTEBIN_API_KEY": "your-pastebin-api-key"
    }
  }
}
